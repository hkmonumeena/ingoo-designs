<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FortyFiveActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_bottom">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
             android:layout_marginTop="20dp"
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <ImageView
                    android:id="@+id/back_45"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/blackback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/mes_r_alisations"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textColor="@color/headerlightcolor"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:alpha="0.8"
                        android:src="@drawable/f1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_alignParentEnd="true"
                        android:src="@drawable/white_bar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d_co_de_table"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="16dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#7A000000"
                        android:layout_height="match_parent"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:alpha="0.8"
                        android:src="@drawable/f2" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_alignParentEnd="true"
                        android:src="@drawable/white_bar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/centre_de_table"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="16dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#7A000000"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:alpha="0.8"
                        android:src="@drawable/f3" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_alignParentEnd="true"
                        android:src="@drawable/white_bar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d_co_de_table"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="16dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#7A000000"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:alpha="0.8"
                            android:src="@drawable/c1" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_alignParentEnd="true"
                            android:src="@drawable/white_bar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wedding_cake"
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="16dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#7A000000"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:alpha="0.8"
                            android:src="@drawable/c2" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_alignParentEnd="true"
                            android:src="@drawable/white_bar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gateau_la_cr_me"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="16dp"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"

                    android:layout_width="220dp"
                    android:layout_height="210dp">





                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/c3" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/white_bar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chevalet"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#7A000000"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="120dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:alpha="0.8"
                        android:src="@drawable/f6" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_alignParentEnd="true"
                        android:src="@drawable/white_bar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bouquet_mari_e"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#7A000000"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="120dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:alpha="0.8"
                        android:src="@drawable/f7" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_alignParentEnd="true"
                        android:src="@drawable/white_bar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bouquet_mari_e"
                        android:textSize="16dp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#7A000000"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:alpha="0.8"
                        android:scaleType="fitXY"
                        android:src="@drawable/c4" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="25dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/white_bar" />



                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:weightSum="5"
        android:id="@+id/rl_bottom"
        android:gravity="center"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"

                android:src="@drawable/homegrey" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="7dp"
                android:visibility="gone"
                android:src="@drawable/home"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/menugrey"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="7dp"
                android:visibility="gone"
                android:src="@drawable/menublue"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:src="@drawable/msggrey" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="7dp"
                android:visibility="gone"
                android:src="@drawable/msgblue"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:src="@drawable/notigrey"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="7dp"
                android:visibility="gone"
                android:src="@drawable/noti"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:src="@drawable/usergrey" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="7dp"
                android:visibility="gone"
                android:src="@drawable/user"/>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>